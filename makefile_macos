CC=mpicc
CLIBS= -lglfw3 -lGLEW -framework OpenGL -framework Cocoa -framework IOkit -L/usr/local/Cellar/freetype/2.5.3_1/lib -lfreetype
CINCLUDES= -I/usr/local/Cellar/freetype/2.5.3_1/include/freetype2
CFLAGS= -DGLFW -O3 -ffast-math -lm

all:
	mkdir -p bin
	$(CC) $(CINCLUDES) $(CFLAGS) $(CLIBS) ogl_utils.c glfw_utils.c dividers_gl.c particles_gl.c mover_gl.c font_gl.c lodepng.c background_gl.c renderer.c geometry.c hash.c communication.c fluid.c -o bin/sph.out
clean:
	rm -f ./sph.out
	rm -f ./*.o
