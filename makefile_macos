CC=mpicc
CLIBS= -lglfw3 -lGLEW -framework OpenGL -framework Cocoa -framework IOkit
CFLAGS= -DGLFW -O3 -ffast-math -lm

all:
	mkdir -p bin
	$(CC) $(CINCLUDES) $(CFLAGS) $(CLIBS) ogl_utils.c glfw_utils.c circles_gl.c font_gl.c renderer.c geometry.c hash.c communication.c fluid.c -o bin/sph.out
clean:
	rm -f ./sph.out
	rm -f ./*.o
